
<% if @post.errors.any?%>
    <div class="alert alert-danger">
        <h5><%= t('common.errors') %></h5>
        <ul>
            <% @post.errors.full_messages.each do |message|%>
            <li> <%=message%> </li>
            <% end %>
        </ul>
    </div>
<% end %>
<div class="post_form"> 

    <%= form_for @post, class: "was-validated", html: {multipart: true} do |f|%>
        <div class="post_form_input">
            <%= f.label :title %>
            <%= f.text_field :title, class:"form-control w-75" ,:required => true%>
        </div>

<br>
        <div class="post_form_input">
            <%= f.label :author %>
            <%= f.text_field :author ,:value =>current_user.email,:readonly => true, class:"form-control w-75"%>
        </div>
<br>
        <div >
            <%= f.label :body %>
            <%= f.text_area :body ,rows: 40 , class: 'post_form_textarea',:required => true%>
        </div>
<br>
        <div class="form-group">
            <%= f.label 'img' %>
            <%= f.file_field :image ,:required => true%>
        </div>
<br>
        <div class="form-group">
            <%= f.label :all_tags %>
            <%= f.text_field :all_tags, class:"form-control w-100" ,:required => true %>
        </div>

<br>

    <div clas="container">
        <div >
            <%= link_to 'Back', :back ,class: 'btn btn-dark'%>
            <%= f.submit 'Post' ,class: 'btn btn-secondary'%>

        </div>     
    </div>
      
        
        <br>
        
    <% end %>
</div>
